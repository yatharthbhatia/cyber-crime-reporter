generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  phone     String?
  role      Role     @default(USER)
  reports   Report[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  type        String
  status      Status     @default(PENDING)
  evidence    Evidence[]
  user        User       @relation(fields: [userId], references: [id])
  userId      String     @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Evidence {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName    String
  fileType    FileType
  fileSize    Int
  fileUrl     String
  report      Report   @relation(fields: [reportId], references: [id])
  reportId    String   @db.ObjectId
  uploadedAt  DateTime @default(now())
}

model EmergencyContact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  phone       String
  description String
  type        String
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  INVESTIGATING
  RESOLVED
  CLOSED
}

enum FileType {
  PDF
  IMAGE
}